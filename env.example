# ===========================================
# AgroVision Pro Environment Configuration
# ===========================================
# Copy this file to .env and modify values for your environment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=agrovision_dev
POSTGRES_USER=agrovision
POSTGRES_PASSWORD=0106800
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Full Database URL for applications
DATABASE_URL=postgresql://agrovision:0106800@localhost:5433/agrovision_dev

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# APPLICATION URLS
# ===========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
AI_SERVICE_URL=http://localhost:8000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Change these in production!
JWT_SECRET=dev-jwt-secret-change-in-production
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production
API_SECRET_KEY=dev-api-secret-change-in-production

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development
ENVIRONMENT=development

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=500000000
UPLOAD_DIR=./uploads
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv

# ===========================================
# AI/ML CONFIGURATION
# ===========================================
MODEL_PATH=./models
PROCESSING_TIMEOUT=300
MAX_CONCURRENT_JOBS=3

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Weather API
WEATHER_API_KEY=your_weather_api_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=agrovision-uploads

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info 